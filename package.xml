<?xml version="1.0"?>
<package format="3">
  <name>qml_ros2_plugin</name>
  <version>1.25.2</version>
  <description>
    A QML plugin for ROS.
    Enables full communication with ROS from QML.
  </description>

  <maintainer email="qml_ros2_plugin@stefanfabian.me">Stefan Fabian</maintainer>

  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>ament_index_cpp</depend>
  <depend>rclcpp</depend>
  <depend>image_transport</depend>
  <depend>libqt6-core</depend>
  <depend>libqt6-multimedia</depend>
  <depend>libqt6-qml</depend>
  <depend>libqt6-quick</depend>
  <depend>ros_babel_fish</depend>
  <depend>tf2_ros</depend>
  <depend>yaml-cpp</depend>
  <build_depend>qt6-base-dev</build_depend>
  <build_depend>qt6-declarative-dev</build_depend>
  <build_depend>qt6-multimedia-dev</build_depend>
  <test_depend>ament_cmake_gtest</test_depend>
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>example_interfaces</test_depend>
  <test_depend>qml6-module-qtquick</test_depend>
  <test_depend>qml6-module-qtqml-workerscript</test_depend>
  <test_depend>ros_babel_fish_test_msgs</test_depend>
  <test_depend>std_srvs</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
